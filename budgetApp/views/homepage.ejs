<!DOCTYPE html>
<html lang="en">
  <head>
    <title>John's Budget App</title>
  </head>
  <body>
    
      <nav class="navbar navbar-inverse navbar-static-top">
        <a href="#" class="navbar-brand">Budget App</a>
        <div id="container">
          
        </div>
      </nav>

    <div class="container-fluid">
      <div class="row">
        
        <div class="col-sm-3 col-md-2 sidebar"></div>
          
        <div class="col-sm-9 offset-sm-3 col-md-6 offset-md-6 main"> 
          <div class="table-responsive">
            <table class="table table-sm table-striped table-hover">
              <thead class="thead-inverse">
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Price</th>
                  <th>Category</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                  
                  <% _.each(expenses, function(expense) { %>
                  <tr>
                    <td><%= expense.id%></td>
                    <td><%= expense.name%></td>
                    <td>$<%= expense.price%></td>
                    <td><%= expense.type %></td>
                    <td><%= expense.createdAt%></td>
                  </tr>
                  <% }) %>

              </tbody>
            </table>
          </div>
        </div> 

      </div>
    </div>


  </body>
</html>
